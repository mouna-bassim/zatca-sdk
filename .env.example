# ZATCA Phase-2 e-Invoice SDK Configuration
# Copy this file to .env and update with your actual values

# Company Information
ZATCA_VAT_NUMBER=123456789012345
ZATCA_SELLER_NAME=Your Company Name Ltd

# API Configuration
ZATCA_API_BASE_URL=https://gw-fatoora.zatca.gov.sa/e-invoicing/developer-portal

# Certificate Information (Set after CSR upload and certificate generation)
ZATCA_CSID=your-csid-here
ZATCA_CERTIFICATE_PATH=./cert.pem
ZATCA_PRIVATE_KEY_PATH=./ec-priv.pem

# Optional: Company Address Details
ZATCA_COMPANY_STREET=King Fahd Road
ZATCA_COMPANY_BUILDING=1234
ZATCA_COMPANY_PLOT=1234
ZATCA_COMPANY_DISTRICT=Al Olaya
ZATCA_COMPANY_CITY=Riyadh
ZATCA_COMPANY_POSTAL_CODE=12345

# Development Settings
NODE_ENV=development
DEBUG=zatca:*

# API Timeouts and Retry Settings
ZATCA_API_TIMEOUT=30000
ZATCA_API_RETRIES=3

# Testing Settings (for sandbox)
ZATCA_TEST_MODE=true
ZATCA_SIMULATION_MODE=true
